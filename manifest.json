{
  "manifest_version": 2,

  "name": "Crypto ticker",
  "description": "Chrome extension for tracking crypto stats",
  "version": "1.0",
  "background": {
    "scripts": ["dist/build.js"]
  },
  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "index.html"
  },
  "icons": {
    "128": "logo.png"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "https://bittrex.com/api/"
  ],
  "web_accessible_resources": [
    "loader.gif"
  ]
}
