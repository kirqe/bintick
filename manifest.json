{
  "manifest_version": 2,

  "name": "Crypto ticker",
  "description": "Chrome extension for tracking crypto stats",
  "version": "1.0",

  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "https://api.binance.com/",
    "https://bittrex.com/"
  ],
  "web_accessible_resources": [
    "loader.gif"
  ]
}
